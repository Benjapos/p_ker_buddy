# WhatsApp Bot Security Configuration
# Copy this to .env and fill in your values

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-here

# Admin phone numbers (comma-separated)
ADMIN_PHONE_NUMBERS=+1234567890,+0987654321

# WhatsApp session storage (secure path)
WHATSAPP_SESSION_PATH=./sessions

# Database path
DATABASE_PATH=./data/poker_bot.db

# Server configuration
PORT=3000
NODE_ENV=production

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Poll scheduling
POLL_SCHEDULE_CRON=0 18 * * 0-4
FOOD_POLL_SCHEDULE_CRON=0 12 * * 0-4
HOST_POLL_SCHEDULE_CRON=0 14 * * 0-4

# Webhook security
WEBHOOK_SECRET=your-webhook-secret-here

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bot.log 